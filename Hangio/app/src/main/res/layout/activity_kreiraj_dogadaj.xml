<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateEvent">

    <EditText
        android:layout_marginLeft="15dp"
        android:layout_marginRight="150dp"
        android:hint="Naziv"
        android:id="@+id/input_naziv"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="70dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Kategorija: " />

        <Spinner
            android:id="@+id/spinner_kategorija"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:layout_marginLeft="15dp"
        android:layout_marginRight="150dp"
        android:hint="Grad"
        android:id="@+id/input_grad"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginLeft="15dp"
        android:layout_marginRight="150dp"
        android:hint="Adresa"
        android:id="@+id/input_adresa"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginLeft="15dp"
        android:layout_marginRight="150dp"
        android:hint="Datum događaja"
        android:id="@+id/input_datum"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginLeft="15dp"
        android:layout_marginRight="150dp"
        android:hint="Broj osoba"
        android:id="@+id/input_broj_osoba"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="150dp"
        android:id="@+id/opis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Opis događaja"
        android:textSize="18dp"/>

    <EditText
        android:layout_marginLeft="15dp"
        android:layout_marginRight="150dp"
        android:hint="Ovjdje unesi opis događaja"
        android:id="@+id/input_opis"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"/>

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/objavi_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Objavi" />

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/odustni_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odustani"/>

</LinearLayout>
