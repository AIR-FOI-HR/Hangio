<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:layout_margin="15dp"
            android:src="@drawable/hangio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/korime_txt"
            android:layout_width="match_parent"
            android:hint="E-mail"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/lozinka_txt"
            android:layout_width="match_parent"
            android:hint="Lozinka"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/zab_lozinka_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clickable="true"
            android:text="Zaboravili ste lozinku?" />
        <Button
            android:id="@+id/prijava_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prijavi se"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:background="#E0873D"/>
        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/registracija_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registriraj se"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:background="#D6CDCB"
            />

    </LinearLayout>

</RelativeLayout>
