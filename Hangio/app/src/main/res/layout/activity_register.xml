<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:layout_margin="15dp"
            android:src="@drawable/hangio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/ime_txt"
            android:layout_width="match_parent"
            android:hint="Ime"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/prezime_txt"
            android:layout_width="match_parent"
            android:hint="Prezime"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/korime_txt"
            android:layout_width="match_parent"
            android:hint="Korisničko ime"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/lozinka_txt"
            android:layout_width="match_parent"
            android:hint="Lozinka"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/ponovi_lozinku_txt"
            android:layout_width="match_parent"
            android:hint="Ponovi lozinku"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/email_txt"
            android:layout_width="match_parent"
            android:hint="email@email.com"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/godina_txt"
            android:layout_width="match_parent"
            android:hint="Godina rođenja"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <AutoCompleteTextView
            android:id="@+id/grad_autoc"
            android:hint="Grad"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prihvaćam uvjete korištenja aplikacije"
            android:layout_margin="7dp"/>
        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/registracija_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registriraj se"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:background="#D6CDCB"
            />

    </LinearLayout>

</RelativeLayout>